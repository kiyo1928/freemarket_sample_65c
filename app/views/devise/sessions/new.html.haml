.user_header
  %h1
    = link_to image_tag("fmarket_logo_red.svg", size: "185x49", alt: "mercari", class: 'header_icon'), root_path
    
%main.user_container
  .signin_format
    .signin_way
      %p アカウントをお持ちでない方はこちら
      = link_to index_path, class: 'signin_mail' do
        %p.text_mail 新規会員登録
    .signin_way
      = link_to user_facebook_omniauth_authorize_path, method: :post, class: 'signin_fb' do
        = icon('fab', 'facebook-square', class: 'fb')
        %p.text_fb Facebookでログイン
      = link_to user_google_oauth2_omniauth_authorize_path, method: :post, class: 'signin_gg' do
        = icon('fab', 'google', class: 'gg')
        %p.text_gg Googleでログイン
    .signin_way
      = form_for(resource, as: resource_name, url: session_path(resource_name),builder: CustomFormBuilder) do |f|
        .form-group__first
          = f.text_field :email, placeholder:"メールアドレス", class:"input-default"
        .form-group
          = f.password_field :password, placeholder:"パスワード", class:"input-default"
        .form-group
        = f.submit "ログイン", class:"btn-default btn-red"
        .form-group.text-left
          %p
            = link_to "https://www.mercari.com/jp/password/reset/start/", target:"_blank", class: "link_decoration" do
              パスワードをお忘れの方
