.user_header
  %h1
    = link_to image_tag("fmarket_logo_red.svg", size: "185x49", alt: "mercari", class: 'header_icon'), root_path

%main.user_container
  .main_content
    .register_format
      %h2.signup_title
        新規会員登録
      .register_way
        .register_choice
          = link_to profile_path,class: 'mail_btn' do
            = icon('far', 'envelope', class:'let')
            %p.text_mail メールアドレスで登録する
        .button-default.blue
          = link_to user_facebook_omniauth_authorize_path, method: :post, class: 'register_fb' do
            = icon('fab', 'facebook-square', class: 'fb')
            %p.text_fb Facebookで登録する
        .button-default.white
          = link_to user_google_oauth2_omniauth_authorize_path, method: :post, class: 'register_gg' do
            = icon('fab', 'google', class: 'gg')
            %p.text_gg Googleで登録する



