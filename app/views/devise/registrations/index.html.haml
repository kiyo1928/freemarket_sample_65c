%main.single-main
  %section.l-single-container
    %h2.l-single-head.registration
      新規会員登録
    .l-single-inner.registration-form
      .l-single-content
        .button-default.red
          = link_to profile_path,class:"red" do
            = icon('far', 'envelope', class:"m-icon")
            %p メールアドレスで登録する
        .button-default.blue
          = link_to '#', class: "blue" do
            = icon('fab', 'facebook-square', class:"f-icon")
            %p Facebookで登録する
        .button-default.white
          = link_to '#', class:"g-link" do
            = icon('fab', 'google', class:"g-icon")
            %p Googleで登録する



