.single-container
  .user_header
    %h1
      = link_to image_tag("fmarket_logo_red.svg", size: "185x49", alt: "mercari", class: 'header_icon'), root_path
      %nav.progress
        %ul.progress-bar
          %li.through
            会員情報
            .progress-status#active
            .progress-status_bar#active
          %li.active
            電話番号認証
            .progress-status#active
            .progress-status_bar#active
          %li.address
            お届け先住所入力
            .progress-status#active
            .progress-status_bar#active
          %li.payment#red
            支払い方法
            .progress-status#active
            .progress-status_bar
          %li.end
            完了
            .progress-status
            .progress-status_bar

  %main.single-main
    %section.l-single-container
      %h2.l-single-head.registration
        支払い方法
      = form_for(@user, url: complete_path, method: :post) do |f|
        .l-single-inner.registration-form
          .l-single-content
            .form-group__first
              %label{for: "payment_card_no"} カード番号
              %span.form-require 必須
              .dateOfbirth
              %input#payment_card_no.input-default{"data-input-type" => "card", :maxlength => "19", :placeholder => "半角数字のみ", :type => "text", value: ""}/
              %ul#card-no-error-wrapper.has-error-text
              %ul.signup-card-list
                %li
                  %img{alt: "", height: "20", src: "//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?2561606804", width: "49"}/
                %li
                  %img{alt: "", height: "20", src: "//www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?2561606804", width: "34"}/
                %li
                  %img{alt: "", height: "20", src: "//www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?2561606804", width: "30"}/
                %li
                  %img{alt: "", height: "20", src: "//www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?2561606804", width: "32"}/
                %li
                  %img{alt: "", height: "20", src: "//www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?2561606804", width: "21"}/
                %li
                  %img{alt: "", height: "20", src: "//www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?2561606804", width: "32"}/
                %li
                  %img{alt: "", height: "20", src: "//www-mercari-jp.akamaized.net/assets/img/card/discover.svg?2561606804", width: "32"}/
            .form-group.signup-form-expire
              %label{for: "payment_card_expire"} 有効期限
              %span.form-require 必須
              .dateOfbirth
              .select-wrap.half
                %select#payment_card_expire_mm.select-default
                  %option{value: "01"} 01
                  %option{value: "02"} 02
                  %option{value: "03"} 03
                  %option{value: "04"} 04
                  %option{value: "05"} 05
                  %option{value: "06"} 06
                  %option{value: "07"} 07
                  %option{value: "08"} 08
                  %option{value: "09"} 09
                  %option{value: "10"} 10
                  %option{value: "11"} 11
                  %option{value: "12"} 12
                %i.icon-arrow-bottom
                %span 月
              .select-wrap.half
                %select#payment_card_expire_yy.select-default
                  %option{value: "19"} 19
                  %option{value: "20"} 20
                  %option{value: "21"} 21
                  %option{value: "22"} 22
                  %option{value: "23"} 23
                  %option{value: "24"} 24
                  %option{value: "25"} 25
                  %option{value: "26"} 26
                  %option{value: "27"} 27
                  %option{value: "28"} 28
                  %option{value: "29"} 29
                %i.icon-arrow-bottom
                %span 年
              %ul#expire-mm-error-wrapper.has-error-text
              %ul#expire-yy-error-wrapper.has-error-text
            .form-group
              %label{for: "payment_card_security_code"} セキュリティコード
              %span.form-require 必須
              .dateOfbirth
              %input#payment_card_security_code.input-default{placeholder: "カード背面4桁もしくは3桁の番号", type: "number",value: ""}
              %ul#security-code-error-wrapper.has-error-text
            .form-group__last.text-right
              %p
                = link_to root_path, target:"_blank", class: "link_decoration" do
                  = icon('fas', 'question-circle', class:'rightIcon')
                  カード裏面の番号とは？
            %input#user_id{name:"user_id",type: "hidden", value:"885557553"}/
            %input#encrypted_card_data{name: "encrypted_card_data",type: "hidden"}/
            %p#primary-error.has-error-text
            %input{name: "after_save_callback", type: "hidden", value: ""}/
            = f.submit "次へ", class:"#submit-button btn-default btn-red"
