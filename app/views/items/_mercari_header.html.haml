.all
  .header
    .top-menu
      .top-menu__upper
        .left-side
          = link_to "/" do
            = image_tag "fmarket_logo_red.svg", size: "139x37"
        .right-side
          .header-form
            サーチフォーム
      .top-menu__under
        .top-menu__under__search
          .top-menu__under__search__category
            = link_to "/", class:'category-search' do
              = icon('fas', 'list-ul', class: 'category-link')
              カテゴリーから探す
          .top-menu__under__search__brand
            = link_to "/", class:'brand-search' do
              = icon('fas', 'tags', class: "brand-link")
              ブランドから探す
        .top-menu__under__user-info
          - if user_signed_in?
            .user-registration
              = link_to "マイページ", users_path, method: :get, class: 'registration-btn'
            .user-sessions
              = link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'session-btn'
          - else
            .user-registration
              = link_to "新規会員登録", index_path, class: 'registration-btn'
            .user-sessions
              = link_to "ログイン", new_user_session_path, class: 'session-btn'

  