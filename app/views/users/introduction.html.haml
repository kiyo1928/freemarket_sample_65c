.edit_header
  = render "items/mercari_header"
  .sub_header
    %ul.link_others
      %li.link_top
        - breadcrumb :introduction
        = render "layouts/breadcrumbs"
.edit_middle
  .mypage_frame
    = render "mypage_sidebar"
    .profile_box
      %h2.profile_upper
        プロフィール
      .profile_bottom
        = form_for(@user) do |f|
          .profile_images
            .profile_char
              .profile_icon
                = image_tag @user.icon_image, width: "60",height: "60", alt: "りんご", class: "input_photo"
                = f.text_field :nickname, class: "input_text"
          .profile_writing
            .writing_space 
              = f.text_area :introduction, class: "input_sentence"              
            .profile_btn
              = f.submit "変更する" , class: "change_btn"

    = render "items/sell-btn_icon"
.edit_footer
  = render "items/mercari_footer"